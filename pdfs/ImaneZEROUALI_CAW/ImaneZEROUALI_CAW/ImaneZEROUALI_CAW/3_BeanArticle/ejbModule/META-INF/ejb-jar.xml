<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>
	<description>Descripteur de deploiement de ArticleBean</description>
	<display-name>ArticleBean</display-name>
	<enterprise-beans>
    	<entity>
			<description>Description de ArticleBean</description>
      		<display-name>ArticleBean</display-name>
      		<ejb-name>ArticleBean</ejb-name>
      		<home>article.ArticleHome</home>
      		<remote>article.Article</remote>
      		<ejb-class>article.ArticleBean</ejb-class>
      		<persistence-type>Container</persistence-type>
      		<prim-key-class>java.lang.Integer</prim-key-class>
      		<reentrant>False</reentrant>
      		<cmp-version>2.x</cmp-version>
      	    <abstract-schema-name>ArticleSN</abstract-schema-name>
    		<cmp-field>
      			<field-name>idArticle</field-name>
    		</cmp-field>
    		<cmp-field>
      			<field-name>libelle</field-name>
    		</cmp-field>
    		<cmp-field>
      			<field-name>categorie</field-name>
    		</cmp-field>
    		<cmp-field>
      			<field-name>prixUnitaire</field-name>
    		</cmp-field>

      		<primkey-field>idArticle</primkey-field>

      		<query>
        		<query-method>
        			<method-name>findByCategorie</method-name>
        			<method-params>
          				<method-param>java.lang.String</method-param>
        			</method-params>
      			</query-method>
      			<ejb-ql>
            		select object(a) from ArticleSN a where a.categorie = ?1
      			</ejb-ql>
    		</query>
    	</entity>
	</enterprise-beans>
</ejb-jar>


